{
  
  // load the application module (app.js)
  modules: ['$/app'],

  // RequireJS config - exactly as in RequireJS docs
  require: {
    paths: {
      app: '../app'
    },

    map: {
      '*': {
        selector: 'jquery'
      }
    },

    // requirejs optimizer build config
    build: {
      zestLayer: {
        include: ['^!app/home']
      }
    }
  },

  // port to run the server on
  port: 8080
}
